{% comment %}
  Main Page Section - For static page content with quantum effects
  @MutationCompatible: All Profiles
  @StrategyProfile: quantum-entangled
  @Version: 1.0.0
{% endcomment %}

<div class="main-page-section">
  <div class="container">
    <div class="page-content">
      <header class="page-header">
        <h1 class="page-title">{{ page.title }}</h1>
      </header>

      <div class="rte quantum-content" data-trauma-resonance="0.{{ page.id | modulo: 100 }}">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Apply quantum effects to page content
    if (window.voidBloom && window.voidBloom.quantumEngine) {
      const contentElement = document.querySelector('.quantum-content');
      if (contentElement) {
        const resonance = parseFloat(contentElement.getAttribute('data-trauma-resonance') || 0.5);
        window.voidBloom.quantumEngine.applyContentEffect(contentElement, resonance);
      }
    }
  });
</script>

{% schema %}
{
  "name": "Page Content",
  "settings": [
    {
      "type": "header",
      "content": "Quantum Content Effects"
    },
    {
      "type": "checkbox",
      "id": "enable_quantum_effects",
      "label": "Enable quantum content effects",
      "default": true
    },
    {
      "type": "range",
      "id": "trauma_resonance",
      "min": 0,
      "max": 100,
      "step": 5,
      "label": "Trauma resonance intensity",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Page Content",
      "category": "Content"
    }
  ]
}
{% endschema %}
