    </div>
    
    <div class="footer-nav-section">
      <h3 class="footer-heading">{{ settings.footer_menu_heading | default: 'Navigation' }}</h3>
      <ul class="footer-nav">
        {% for link in linklists[settings.footer_menu].links %}
          <li><a href="{{ link.url }}" class="quantum-link">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    
    <div class="footer-secondary-nav">
      <h3 class="footer-heading">{{ settings.footer_secondary_menu_heading | default: 'Information' }}</h3>
      <ul class="footer-nav">
        {% for link in linklists[settings.footer_secondary_menu].links %}
          <li><a href="{{ link.url }}" class="quantum-link">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    
    <div class="footer-newsletter">
      <h3 class="footer-heading">{{ settings.newsletter_heading | default: 'Join Our Network' }}</h3>
      <p>{{ settings.newsletter_text | default: 'Subscribe to receive updates, access to exclusive deals, and more.' }}</p>
      
      {% form 'customer', class: 'newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="input-group">
          <input type="email" name="contact[email]" id="EmailFooter" 
                 class="quantum-input"
                 placeholder="{{ settings.newsletter_placeholder | default: 'Your email' }}" 
                 required>
          <button type="submit" class="quantum-button">
            {{ settings.newsletter_button | default: 'Subscribe' }}
          </button>
        </div>
        {% if form.errors %}
          <div class="form-message form-message--error">{{ form.errors | default_errors }}</div>
        {% endif %}
        {% if form.posted_successfully? %}
          <div class="form-message form-message--success">{{ 'general.newsletter_form.confirmation' | t }}</div>
        {% endif %}
      {% endform %}
    </div>
  </div>
  
  <div class="footer-bottom">
    <div class="footer-copyright">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ settings.copyright_text }}</p>
    </div>
    
    <div class="footer-legal-links">
      {% if shop.privacy_policy %}
        <a href="{{ shop.privacy_policy.url }}" class="quantum-link">{{ shop.privacy_policy.title }}</a>
      {% endif %}
      {% if shop.terms_of_service %}
        <a href="{{ shop.terms_of_service.url }}" class="quantum-link">{{ shop.terms_of_service.title }}</a>
      {% endif %}
      {% if shop.refund_policy %}
        <a href="{{ shop.refund_policy.url }}" class="quantum-link">{{ shop.refund_policy.title }}</a>
      {% endif %}
    </div>
    
    {% if settings.show_payment_icons %}
      <div class="payment-icons">
        {% for type in shop.enabled_payment_types %}
          <span class="payment-icon payment-icon--{{ type }}">
            {{ type | payment_type_svg_tag }}
          </span>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</footer>

