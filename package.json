{
  "name": "voidbloom-memorywear",
  "version": "1.0.0",
  "description": "Cyber-glitch memorywear system fusing trauma coding and multidimensional lore",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "vite",
    "build": "vite build",
    "compile:scss": "sass assets/coherence-design-system.scss:assets/coherence-design-system.css --style=compressed",
    "watch:scss": "sass --watch assets/coherence-design-system.scss:assets/coherence-design-system.css --style=compressed",
    "build:all": "npm run compile:scss && npm run build",
    "lint:css": "stylelint '**/*.{css,scss}' --formatter json > stylelint-report.json || true",
    "lint:css:fix": "stylelint '**/*.{css,scss}' --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.0",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "babel-jest": "^29.7.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.1",
    "lint-staged": "^15.5.1",
    "mini-css-extract-plugin": "^2.9.2",
    "node-sass": "^9.0.0",
    "sass": "^1.87.0",
    "sass-loader": "^16.0.5",
    "stylelint": "^16.19.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.11.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "^6.3.3",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.5",
    "connect-livereload": "^0.6.1",
    "express": "^5.1.0",
    "livereload": "^0.9.3"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  }
}

