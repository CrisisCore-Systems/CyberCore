{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {}
        },
        "price": {
          "type": "price",
          "settings": {}
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {}
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        },
        "description": {
          "type": "description",
          "settings": {}
        },
        "trauma_indicator": {
          "type": "custom",
          "settings": {
            "show_trauma_indicator": true
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "trauma_indicator"
      ],
      "settings": {
        "enable_trauma_coding": true,
        "enable_dimensional_depth": true
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "title": "Memory Resonance",
        "products_to_show": 4,
        "default_trauma_encoding": "recursion"
      }
    }
  },
  "order": ["main", "product-recommendations"]
}
