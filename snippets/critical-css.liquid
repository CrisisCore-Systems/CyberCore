/* Base reset and variables */
:root {
  /* Color variables */
  --vb-color-primary: {{ settings.color_primary | default: '#00ffff' }};
  --vb-color-secondary: {{ settings.color_secondary | default: '#0088ff' }};
  --vb-color-accent: {{ settings.color_accent | default: '#80ffff' }};
  --vb-color-background: {{ settings.color_background | default: '#001a33' }};
  --vb-color-surface: {{ settings.color_surface | default: '#001a33' }};
  --vb-color-foreground: {{ settings.color_foreground | default: '#f0f8ff' }};
  --vb-color-error: #ff4d4d;
  --vb-color-success: #00ff80;
  --vb-color-warning: #ffcc00;
  --vb-color-info: #00ccff;

  /* Spacing variables */
  --vb-space-1: 0.25rem;
  --vb-space-2: 0.5rem;
  --vb-space-3: 0.75rem;
  --vb-space-4: 1rem;
  --vb-space-5: 1.25rem;
  --vb-space-6: 1.5rem;
  --vb-space-8: 2rem;
  --vb-space-10: 2.5rem;
  --vb-space-12: 3rem;
  --vb-space-16: 4rem;
  --vb-space-20: 5rem;
  --vb-space-24: 6rem;
  --vb-space-32: 8rem;
  --vb-space-40: 10rem;
  --vb-space-48: 12rem;
  --vb-space-56: 14rem;
  --vb-space-64: 16rem;

  /* Typography variables */
  --vb-font-size-xs: 0.75rem;
  --vb-font-size-sm: 0.875rem;
  --vb-font-size-base: 1rem;
  --vb-font-size-lg: 1.25rem;
  --vb-font-size-xl: 1.5rem;
  --vb-font-size-2xl: 1.875rem;
  --vb-font-size-3xl: 2.25rem;
  --vb-font-size-4xl: 3rem;
  --vb-font-size-5xl: 3.75rem;
  --vb-font-size-6xl: 4.5rem;

  --vb-font-weight-light: 300;
  --vb-font-weight-normal: 400;
  --vb-font-weight-medium: 500;
  --vb-font-weight-bold: 700;

  /* Animation variables */
  --vb-animation-fast: 150ms;
  --vb-animation-normal: 300ms;
  --vb-animation-slow: 500ms;
  --vb-animation-very-slow: 1000ms;

  /* Border radius */
  --vb-radius-sm: 2px;
  --vb-radius-md: 4px;
  --vb-radius-lg: 8px;
  --vb-radius-xl: 16px;
  --vb-radius-full: 9999px;

  /* Z-index layers */
  --vb-z-index-below: -1;
  --vb-z-index-base: 0;
  --vb-z-index-above: 1;
  --vb-z-index-dropdown: 10;
  --vb-z-index-sticky: 20;
  --vb-z-index-fixed: 30;
  --vb-z-index-drawer: 40;
  --vb-z-index-modal: 50;
  --vb-z-index-popover: 60;
  --vb-z-index-toast: 70;
  --vb-z-index-tooltip: 80;
}

/* Reset and base styles */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 16px;
  line-height: 1.5;
  -webkit-text-size-adjust: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  scroll-behavior: smooth;
}

body {
  font-family: {{ settings.body_font.family }}, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, sans-serif;
  font-weight: {{ settings.body_font.weight }};
  font-style: {{ settings.body_font.style }};
  background-color: var(--vb-color-background);
  color: var(--vb-color-foreground);
  overflow-x: hidden;
  transition: background-color var(--vb-animation-slow) ease;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

h1, h2, h3, h4, h5, h6 {
  font-family: {{ settings.heading_font.family }}, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, sans-serif;
  font-weight: {{ settings.heading_font.weight }};
  font-style: {{ settings.heading_font.style }};
  line-height: 1.2;
  margin-bottom: 0.5em;
}

h1 {
  font-size: var(--vb-font-size-4xl);
}

h2 {
  font-size: var(--vb-font-size-3xl);
}

h3 {
  font-size: var(--vb-font-size-2xl);
}

p {
  margin-bottom: 1em;
}

a {
  color: var(--vb-color-primary);
  text-decoration: none;
  transition: color var(--vb-animation-fast) ease;
}

a:hover {
  color: var(--vb-color-accent);
}

button, input, select, textarea {
  font-family: inherit;
  font-size: 100%;
  line-height: 1.15;
}

button {
  cursor: pointer;
  background: none;
  border: none;
}

img, svg {
  display: block;
  max-width: 100%;
  height: auto;
}

/* Accessibility helpers */
.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.skip-to-content-link {
  position: absolute;
  top: -60px;
  left: 0;
  z-index: var(--vb-z-index-toast);
  padding: var(--vb-space-4);
  background-color: var(--vb-color-surface);
  color: var(--vb-color-primary);
  font-weight: var(--vb-font-weight-medium);
  border-radius: 0 0 var(--vb-radius-md) 0;
  transition: top var(--vb-animation-fast) ease;
}

.skip-to-content-link:focus {
  top: 0;
  outline: 2px solid var(--vb-color-accent);
  outline-offset: 2px;
}

/* Focus styles for accessibility */
:focus-visible {
  outline: 2px solid var(--vb-color-accent);
  outline-offset: 2px;
}

/* Main layout */
.main-content {
  flex: 1;
}

/* Critical header styles */
.site-header {
  position: relative;
  z-index: var(--vb-z-index-sticky);
  background-color: rgba(0, 26, 51, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(128, 255, 255, 0.2);
}

.site-header__container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--vb-space-4);
  max-width: 1440px;
  margin: 0 auto;
  width: 100%;
}

.site-header__logo-link {
  display: block;
}

.site-header__logo {
  max-height: 60px;
  width: auto;
}

.site-header__logo-text {
  font-size: var(--vb-font-size-xl);
  font-weight: var(--vb-font-weight-bold);
  color: var(--vb-color-foreground);
}

.site-header__nav {
  display: none;
}

.site-header__actions {
  display: flex;
  align-items: center;
  gap: var(--vb-space-4);
}

.site-header__search-toggle,
.site-header__account,
.site-header__cart {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--vb-color-foreground);
  width: 44px;
  height: 44px;
  position: relative;
  border-radius: var(--vb-radius-md);
  transition: all var(--vb-animation-fast) ease;
}

.site-header__search-toggle:hover,
.site-header__account:hover,
.site-header__cart:hover {
  background-color: rgba(128, 255, 255, 0.1);
  color: var(--vb-color-accent);
}

.site-header__search-toggle svg,
.site-header__account svg,
.site-header__cart svg {
  width: 24px;
  height: 24px;
}

.site-header__cart-count {
  position: absolute;
  top: 0;
  right: 0;
  background-color: var(--vb-color-primary);
  color: var(--vb-color-background);
  font-size: var(--vb-font-size-xs);
  font-weight: var(--vb-font-weight-bold);
  width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--vb-radius-full);
}

/* Media queries for responsive layout */
@media (min-width: 750px) {
  .site-header__nav {
    display: block;
  }

  .site-header__menu {
    display: flex;
    list-style: none;
    gap: var(--vb-space-6);
  }

  .site-header__menu-link {
    color: var(--vb-color-foreground);
    font-weight: var(--vb-font-weight-medium);
    position: relative;
    padding: var(--vb-space-2) 0;
  }

  .site-header__menu-link:hover,
  .site-header__menu-item--active .site-header__menu-link {
    color: var(--vb-color-accent);
  }

  .site-header__menu-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--vb-color-primary);
    transition: width var(--vb-animation-normal) ease;
  }

  .site-header__menu-link:hover::after,
  .site-header__menu-item--active .site-header__menu-link::after {
    width: 100%;
  }
}

/* Glitch effect for trauma profile */
.trauma-fragmentation .site-header {
  position: relative;
}

.trauma-fragmentation .site-header::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.1), transparent);
  z-index: -1;
  animation: fragmentation-header 15s linear infinite;
}

@keyframes fragmentation-header {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}
