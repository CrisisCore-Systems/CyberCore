{% if settings.announcement_bar_enabled %}
  <div class="announcement-bar" data-trauma-profile="{{ settings.announcement_trauma_type }}" role="region" aria-label="Announcement">
    <div class="announcement-bar__content">
      {% if settings.announcement_link %}
        <a href="{{ settings.announcement_link }}" class="announcement-bar__link">
          {{ settings.announcement_text }}
        </a>
      {% else %}
        <p class="announcement-bar__message">{{ settings.announcement_text }}</p>
      {% endif %}
    </div>
  </div>
{% endif %}
